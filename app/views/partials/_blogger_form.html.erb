<% if @blogger.errors %> 
  <% @blogger.errors.full_messages.each do |error| %> 
  <p><%= error %></p>
  <%end%>
<%end%>

<%= form_for @blogger do |f| %>
  <%= f.label :name, "Blogger's Name:" %>
  <br>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :age, "Age:" %>
  <br>
  <%= f.number_field :age %>
  <br><br>
  <%= f.label :bio, "Bio:" %>
  <br>
  <%= f.text_field :bio %>
  <br><br>
  <%= f.submit %>
<% end %>