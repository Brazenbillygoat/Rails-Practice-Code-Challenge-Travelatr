<h1><%= @post.title %></h1> 


<br>
<%= form_for @post do |f| %>
  <%= f.label :likes, "Likes:" %>
  <%= f.number_field :likes %> 
  <%= button_to "Add Like!", post_path(@post.id), params: { add_like: true}, method: "get" %>
  <% end %>



<br>
<h2>Content:</h3><%= @post.content%>
<br><br>

<h2>Destination:</h2><h4><%= link_to @post.destination.name, destination_path(@post.destination) %></h3>

<h2>Country:</h2><h4><%= @post.destination.country %></h4>

<%= link_to "Back to Blogger", blogger_path(@post.blogger)%> 
<br><br>
<%= link_to "View All Available Posts", posts_path(@post)%>